<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ingredientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Name"
                android:fontFamily="@font/opensansboldd"
                android:textColor="@color/Black"
                android:textSize="20sp"/>

            <View
                android:id="@+id/hr1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_below="@id/ingredientName"
                android:background="@color/DarkGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/Black"
                    android:id="@+id/quantityMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Quantity: "
                    android:textSize="16sp"
                    android:fontFamily="@font/opensansregular"
                    />

                <TextView
                    android:textColor="@color/Black"
                    android:id="@+id/quantityAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/quantityMsg"
                    android:text="000"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensansregular"
                    />

                <TextView
                    android:textColor="@color/Black"
                    android:id="@+id/units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/quantityAmt"
                    android:text="units"
                    android:layout_marginStart="3dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensansregular"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/caloriesMsg"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Calories: "
                    android:textSize="16sp"
                    android:fontFamily="@font/opensansregular"
                    />

                <TextView
                    android:id="@+id/caloriesAmt"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/caloriesMsg"
                    android:text="0.00"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensansregular"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/restockBtn"
                    android:text="Restock"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/White"
                    android:background="@drawable/bg_button_rectangular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/editBtn"
                    android:text="Edit Quantity"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/LightGrey"
                    android:layout_toRightOf="@id/restockBtn"
                    android:background="@drawable/bg_button_rectangular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>