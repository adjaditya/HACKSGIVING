<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/displayMsg1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here's what you have"
        android:fontFamily="@font/opensansboldd"
        android:textColor="@color/Black"
        android:textSize="28sp"
        />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/restockAllBtn"
        android:background="@drawable/bg_transparent_border_gray"
        android:layout_width="wrap_content"
        android:text="Restock All"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayMsg1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:layout_below="@id/restockAllBtn"
        android:background="@color/DarkGray"
        android:id="@+id/hr1"/>

    <android.support.v7.widget.RecyclerView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/recyclerViewInventory"
    android:layout_below="@+id/hr1">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>